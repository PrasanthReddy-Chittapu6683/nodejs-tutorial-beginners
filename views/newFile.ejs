<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            background-color: skyblue;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            padding: 30px;
        }

        h1 {
            font-size: 48px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
        }

        p {
            font-size: 16px;
            text-align: center;
        }
    </style>
</head>

<body>
    <%- include ('partials/nav.ejs') -%>
        <h1>Welcoe to Profile of <u><i>
                    <%=person %>
                </i></u>
        </h1>
        <p>Age : <strong>
                <%=data.age %>
            </strong></p>
        <p>Job : <strong>
                <%=data.job %>
            </strong></p>
        <h2>Hobbies</h2>
        <ul>
            <% data.hobbies.forEach (function(item){ %>
                <li>
                    <%= item %>
                </li>

                <% }) %>
        </ul>
</body>

</html>